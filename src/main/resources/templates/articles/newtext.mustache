{{>layouts/header}}


<form class="container" action="/article/create" method="post" enctype="multipart/form-data" >
    <div class="mb-3">
        <label class="form-label">제목</label>
        <input type="text" class="form-control" name="title">


    </div>
    <div class="mb-3">
        <label class="form-label">작성자</label>
        <input type="text" class="form-control" name="writer">
    </div>
    <div class="mb-3">
        <label class="form-label">카테고리</label><br>
    <select name="category">
        <option value="체육시설">체육시설</option>
        <option value="문화시설">문화시설</option>
        <option value="교육">교육</option>
        <option value="진료">진료</option>
        <option value="시설대관">시설대관</option>
    </select>
    </div>
    <div class="mb-3">

        <label class="form-label">이미지</label><br>

        <input type="file" name="imageFile"><br><br>
        <label class="form-label">내용</label>

        <textarea class="form-control" rows="3" name="content"></textarea>

    </div>

    <button type="submit" class="btn btn-outline-secondary">작성완료</button>


</form>

{{>layouts/footer}}