{{>layouts/header}}
<!-- 가독성 향상 -->

<!-- con -->
<form class="container" action="/text/update" method="post" enctype="multipart/form-data">
    <input type="hidden" name="id" value="{{article.id}}">
    <input type="hidden" name="originalImagePath" value="{{article.imagePath}}"> <!-- 기존 이미지 경로 유지 -->


    <div class="mb-3">
        <label class="form-label">제목</label>
        <input type="text" class="form-control bg-secondary text-white" name="title" value="{{article.title}}">
    </div>

    <div class="mb-3">
        <label class="form-label">작성자</label>
        <input type="text" class="form-control bg-secondary text-white" name="writer"value="{{article.writer}}">
    </div>


    <div class="mb-3">
        <label class="form-label">이미지</label><br>
        <input type="file" name="imageFile" ><br><br>
    </div>

    <div class="mb-3">
        <label class="form-label ">내용</label>
        <textarea class="form-control bg-secondary text-white" rows="5" name="content">{{article.content}}</textarea>
    </div>

    <button type="submit" class="btn btn-outline-secondary">수정 완료</button>

    <a href="/text/{{article.id}}">뒤로가기</a>
</form>

{{>layouts/footer}}